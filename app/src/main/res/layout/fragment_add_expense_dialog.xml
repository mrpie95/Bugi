<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="wrap_content"
              android:layout_height="match_parent"
              android:gravity="center"
              android:padding="10dp"
              android:orientation="vertical"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add expense to"
        android:id="@+id/textView5"
        android:layout_gravity="left"/>

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/exp_dialog_type"
        android:drawSelectorOnTop="true"
        android:entries="@array/account_types"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Description"
        android:id="@+id/textView4"
        android:layout_gravity="left"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/exp_dialog_name"
        android:layout_gravity="center_horizontal"
        android:paddingBottom="10sp"
        android:maxLines="1"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Amount"
        android:id="@+id/textView7"
        android:layout_gravity="left"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/exp_dialog_amount"
        android:layout_gravity="center_horizontal"
        android:paddingBottom="10sp"
        android:maxLines="1"
        android:inputType="number"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date"
        android:id="@+id/textView8"
        android:layout_gravity="left"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <EditText
            android:layout_width="162dp"
            android:layout_height="wrap_content"
            android:id="@+id/exp_dialog_date"
            android:layout_gravity="center_horizontal"
            android:paddingBottom="10sp"
            android:maxLines="1"
            android:inputType="number"
            android:layout_weight="1"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/exp_date_button"
            android:background="@null"
            android:src="@mipmap/ic_date"
            />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Location"
        android:id="@+id/textView3"
        android:layout_gravity="left"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <EditText
            android:layout_width="231dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:paddingBottom="10sp"
            android:maxLines="1"
            android:inputType="number"
            android:id="@+id/exp_dialog_location"
            android:layout_weight="0.78"/>

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/imageButton2"
            android:src="@mipmap/ic_gps"
            android:background="@null"
            android:layout_weight="1"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="300sp"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <Button
            android:id="@+id/exp_dialog_dismiss"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dismiss"
            android:layout_weight="1"
            android:backgroundTint="#ffffff"/>

        <Button
            android:id="@+id/exp_btn_exp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Expese"
            android:layout_weight="1"
            android:backgroundTint="#ffffff"
            />

        <Button
            android:id="@+id/exp_btn_pay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Payment "
            android:layout_weight="1"
            android:backgroundTint="#ffffff"
            />
    </LinearLayout>

</LinearLayout>